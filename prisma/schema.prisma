  completed_at     DateTime @default(now()) // 这个待定，不确定是不是直接从前端拿到时间数据
}

model DailyCheckinTaskRecord {
  id               Int      @id @default(autoincrement())
  user_telegram_id String
  completed_at     DateTime @default(now()) // 这个待定，不确定是不是直接从前端拿到时间数据
}

model TweetRecord {
  id         Int    @id @default(autoincrement())
  tweet_link String @unique
}

model RetweetTaskRecord {
  id               Int      @id @default(autoincrement())
  user_telegram_id String
  tweet_id         Int
  completed_at     DateTime @default(now()) // 这个待定，不确定是不是直接从前端拿到时间数据
}

model InviteRecord {
  id                       Int      @id @default(autoincrement())
  invitation_code          Int
  invited_user_telegram_id String
  if_premium               Boolean // 记录邀请来的用户是否的Premium会员
  invited_at               DateTime @default(now()) // 这个待定，不确定是不是直接从前端拿到时间数据
