generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id               Int      @id @default(autoincrement())
  user_telegram_id String   @unique
  is_premium       Boolean
  created_at       DateTime @default(now()) // 这个待定，不确定是不是直接从前端拿到时间数据
  invitation_code  Int      @unique
}

model LottoRecords {
  id               Int      @id @default(autoincrement())
  user_telegram_id String
  bought_at        DateTime @default(now()) // 这个待定，不确定是不是直接从前端拿到时间数据
  lotto            Json // 需要明白JSON如何存数据
}

model PremiumTaskRecord {
  id               Int      @id @default(autoincrement())
  user_telegram_id String   @unique
  completed_at     DateTime @default(now()) // 这个待定，不确定是不是直接从前端拿到时间数据
}

model TGChannelTaskRecord {
